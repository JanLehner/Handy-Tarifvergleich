{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@stylistic/js"],
    "rules": {
        "@stylistic/js/indent": ["error", 4],
        "@stylistic/js/quotes": ["error", "single"],
        "@stylistic/js/semi": ["error", "never"]
    }
}
